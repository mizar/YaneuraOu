root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md,Makefile*]
trim_trailing_whitespace = false

[*.cpp,*.h,*.txt,*.sln,*.vcproj*]
charset = utf-8-bom

[*.vcproj*]
indent_style = space
indent_size = 2
insert_final_newline = false

[*_ja.txt]
charset = utf-8
